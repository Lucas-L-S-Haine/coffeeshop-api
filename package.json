{
  "name": "espresso-api",
  "version": "0.1.0",
  "description": "An API written in CoffeeScript using express.js and MongoDB",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "preinstall": "git config commit.template .gitcommit",
    "test": "scripts/test-mocha.sh",
    "lint": "eslint --ext .coffee src/",
    "prestart": "npm run compile --silent",
    "start": "node .",
    "precompile": "npm run clean --silent",
    "compile": "coffee -o build/ -c src/",
    "clean": "rm -rf build/*",
    "dev": "nodemon"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "ext": "coffee,litcoffee,js,cjs,mjs,json",
    "watch": [
      "src/"
    ],
    "exec": "npm start --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lucas-L-S-Haine/espresso-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lucas-L-S-Haine/espresso-api/issues"
  },
  "homepage": "https://github.com/Lucas-L-S-Haine/espresso-api#readme",
  "devDependencies": {
    "axios": "^0.27.2",
    "coffeescript": "^2.7.0",
    "eslint": "^8.14.0",
    "eslint-plugin-coffeescript": "^1.0.0",
    "eslint-plugin-import": "^2.26.0",
    "expect.js": "^0.3.1",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.16",
    "sinon": "^13.0.2"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "mongodb": "^4.5.0"
  }
}
